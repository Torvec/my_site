---
import { techList } from "@/pages/home/_content/tech-list";
---

<div class="space-y-3">
  <div class="flex flex-wrap justify-between gap-1.5">
    {
      techList.map(({ name, Icon }) => (
        <span
          class="group flex size-9 items-center justify-center rounded-xl border border-stone-600 p-1.5 transition-colors duration-300 ease-in-out hover:border-stone-500 hover:bg-stone-800 lg:size-12"
          title={name}>
          <Icon class="transition-transform duration-300 ease-in-out group-hover:scale-120" aria-label={name} />
        </span>
      ))
    }
  </div>
</div>
