---
import { Image } from "astro:assets";
import profilePic from "@/assets/portrait_gray_transparent_bg.png";
import { socialLinks } from "@/global-consts";

const introHeadline = "ðŸ‘‹ Hey! I'm Edward Vonschondorf";
const introParagraph =
  "I'm a full-stack web developer who lives for solving complex problems, optimizing performance, and continuously learning to build better, more scalable applications. Check out my work, and let's connect!";
const btnText = {
  contact: "Contact Me",
  resume: "My Resume",
  availability: "Availability v",
};
const emailLink = socialLinks[0].url;
const resume = "placeholder";
---

<div class="flex h-full flex-col-reverse items-center gap-1.5 sm:flex-row sm:gap-3">
  <div class="flex h-full flex-col justify-between gap-6 sm:w-2/3">
    <div>
      <h1 class="mb-3 text-center text-lg font-medium text-stone-100 sm:text-left md:text-2xl">{introHeadline}</h1>
      <p class="text-center text-sm font-medium text-stone-300 sm:text-left md:text-lg">{introParagraph}</p>
    </div>
    <div class="grid gap-1.5 sm:grid-cols-2 sm:gap-3 xl:grid-cols-3">
      <a
        href={emailLink}
        class="block w-full rounded-md border border-orange-600 bg-linear-to-b from-orange-600 to-orange-600/50 py-1.5 text-center text-sm text-stone-200 transition duration-300 ease-in-out hover:border-orange-700 hover:from-orange-700 hover:to-orange-800 hover:text-white active:scale-90 xl:py-3">
        {btnText.contact}
      </a>
      <a
        href={resume}
        class="block w-full rounded-md border border-stone-600 bg-linear-to-b from-stone-600 to-stone-600/50 py-1.5 text-center text-sm text-stone-200 transition duration-300 ease-in-out hover:border-stone-700 hover:from-stone-700 hover:to-stone-800 hover:text-white active:scale-90 xl:py-3">
        {btnText.resume}
      </a>
      <button
        class="w-full cursor-pointer rounded-md border border-stone-800 py-1.5 text-sm text-stone-300 transition-colors duration-300 ease-in-out hover:border-stone-700 hover:text-white sm:col-span-2 xl:col-span-1 xl:py-3">
        {btnText.availability}
      </button>
    </div>
  </div>
  <div class="h-full sm:w-1/3">
    <Image
      src={profilePic}
      alt="Profile Picture of Me, Edward Vonschondorf"
      class="ml-auto max-w-48 rounded-full border border-stone-700 shadow-xl shadow-stone-950"
    />
  </div>
</div>
