---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import SectionHeader from "@/components/section-header.astro";

const featuredGame = await getEntry("arcade", "the-running-dog")!;
---

<div class="space-y-3">
  <SectionHeader href="/arcade/">Arcade</SectionHeader>
  <a
    href={`/arcade/${featuredGame.id}/`}
    aria-label={`View Featured Game: ${featuredGame.data.title}`}
    class="group space-y-3">
    <div class="hidden lg:block lg:h-max lg:overflow-hidden lg:rounded-xl lg:border lg:border-stone-700">
      <Image
        src={featuredGame.data.thumbnail}
        alt={`Thumbnail for ${featuredGame.data.title}`}
        class="h-full w-full scale-105 object-cover transition-all duration-300 ease-in-out group-hover:scale-100 group-hover:opacity-80"
      />
    </div>
    <span
      class="hidden text-center font-medium text-stone-300 transition-colors duration-150 ease-in-out group-hover:text-orange-600 lg:block">
      {featuredGame.data.title}
    </span>
  </a>
</div>
