---
import Layout from "../layouts/layout.astro";
import ProfilePic from "../components/profile-pic.astro";
import LocAvailShare from "../components/loc-avail-share.astro";
import IntroParagraph from "../components/intro-paragraph.astro";
import ContactButton from "../components/contact-button.astro";
import Socials from "../components/socials.astro";
import AboutParagraph from "../components/about-paragraph.astro";
import InterestsParagraph from "../components/interests-paragraph.astro";
import ResumeButton from "../components/resume-button.astro";
import TechList from "../components/tech-list.astro";
import Footer from "../components/footer.astro";
---

<Layout>
  <article
    class="relative z-2 container mx-auto grid max-w-7xl grid-cols-3 gap-1.5 px-1.5 text-white lg:grid-cols-4 lg:grid-rows-8 lg:gap-3 lg:px-3 xl:px-0"
  >
    <section
      class="col-span-3 flex flex-col justify-between gap-6 rounded-xl border border-stone-700 bg-stone-900/30 bg-radial-[at_10%_20%] from-stone-700/30 to-stone-700/0 to-50% p-6 backdrop-blur-xs lg:row-span-3 lg:rounded-3xl"
    >
      <div class="block lg:hidden"><ProfilePic /></div>
      <IntroParagraph />
      <div
        class="space-y-6 md:flex md:items-center md:justify-between md:space-y-0"
      >
        <Socials />
        <ContactButton />
      </div>
    </section>
    <section
      class="col-span-3 space-y-6 rounded-xl border border-stone-700 bg-stone-900/30 bg-radial-[at_10%_20%] from-stone-700/30 to-stone-700/0 to-50% p-6 backdrop-blur-xs lg:col-span-1 lg:row-span-7 lg:rounded-3xl"
    >
      <div class="hidden lg:block"><ProfilePic /></div>
      <LocAvailShare />
      <AboutParagraph />
      <InterestsParagraph />
      <ResumeButton />
    </section>
    <section
      class="col-span-3 rounded-xl border border-stone-700 bg-stone-900/30 bg-radial-[at_10%_20%] from-stone-700/30 to-stone-700/0 to-50% p-6 backdrop-blur-xs lg:col-span-1 lg:row-span-2 lg:rounded-3xl"
    >
      <TechList />
    </section>
    <section
      class="col-span-1 rounded-xl border border-stone-700 bg-stone-900/30 bg-radial-[at_10%_20%] from-stone-700/30 to-stone-700/0 to-50% p-6 backdrop-blur-xs lg:col-span-2 lg:row-span-3 lg:rounded-3xl"
    >
      Projects
    </section>
    <section
      class="col-span-1 rounded-xl border border-stone-700 bg-stone-900/30 bg-radial-[at_10%_20%] from-stone-700/30 to-stone-700/0 to-50% p-6 backdrop-blur-xs lg:row-span-3 lg:rounded-3xl"
    >
      Arcade
    </section>
    <section
      class="col-span-1 rounded-xl border border-stone-700 bg-stone-900/30 bg-radial-[at_10%_20%] from-stone-700/30 to-stone-700/0 to-50% p-6 backdrop-blur-xs lg:row-span-2 lg:rounded-3xl"
    >
      Blog
    </section>
    <section
      class="col-span-3 rounded-xl border border-stone-700 bg-stone-900/30 bg-radial-[at_10%_20%] from-stone-700/30 to-stone-700/0 to-50% p-6 backdrop-blur-xs lg:col-span-1 lg:row-span-2 lg:rounded-3xl"
    >
      Now
    </section>
    <section
      class="col-span-3 rounded-xl border border-stone-700 bg-stone-900/30 bg-radial-[at_10%_20%] from-stone-700/30 to-stone-700/0 to-50% p-6 lg:col-span-1 lg:row-span-1 lg:rounded-3xl lg:backdrop-blur-xs"
    >
      <Footer />
    </section>
  </article>
</Layout>
