---
import Layout from "../layouts/Layout.astro";

import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();
---

<Layout>
  <article
    class="container mx-auto px-1.5 lg:px-3 xl:px-0 max-w-7xl grid grid-cols-3 lg:grid-cols-4 grid-rows-8 gap-1.5 lg:gap-3 text-white"
  >
    <section class="col-span-3 lg:row-span-3 bg-stone-800 p-6 rounded-xl lg:rounded-3xl">
      Intro
    </section>
    <section class="col-span-3 lg:col-span-1 lg:row-span-7 bg-stone-800 p-6 rounded-xl lg:rounded-3xl">
      About
    </section>
    <section class="col-span-3 lg:col-span-1 lg:row-span-2 bg-stone-800 p-6 rounded-xl lg:rounded-3xl">
      Tech
    </section>
    <section class="col-span-1 lg:col-span-2 lg:row-span-3 bg-stone-800 p-6 rounded-xl lg:rounded-3xl">
      Projects
    </section>
    <section class="col-span-1 lg:row-span-3 bg-stone-800 p-6 rounded-xl lg:rounded-3xl">
      Arcade
    </section>
    <section class="col-span-1 lg:row-span-2 bg-stone-800 p-6 rounded-xl lg:rounded-3xl">
      Blog
    </section>
    <section class="col-span-3 lg:col-span-1 lg:row-span-2 bg-stone-800 p-6 rounded-xl lg:rounded-3xl">
      Now
    </section>
    <section class="col-span-3 lg:col-span-1 lg:row-span-1 lg:bg-stone-800 p-6 rounded-xl lg:rounded-3xl">
      Footer
    </section>
  </article>
</Layout>
