---
const { href, icon } = Astro.props;
---

{
  href ? (
    <a href={href} class="group flex flex-col justify-between md:flex-row lg:items-baseline">
      <div class="flex flex-col gap-1.5 lg:flex-row lg:items-center">
        <span class="block size-3 rounded-xs bg-stone-100 group-hover:bg-white">{icon}</span>
        <span class="font-medium text-stone-100 transition-colors duration-300 ease-in-out group-hover:text-stone-300">
          <slot />
        </span>
      </div>
      <span class="hidden text-xs text-stone-500 transition-colors duration-300 ease-in-out group-hover:text-orange-600 lg:block">
        More &gt;
      </span>
      <span class="block text-xl font-bold text-stone-500 transition-colors duration-300 ease-in-out group-hover:text-orange-600 lg:hidden">
        &gt;
      </span>
    </a>
  ) : (
    <h2 class="flex flex-col justify-between md:flex-row lg:items-baseline">
      <div class="flex flex-col gap-1.5 lg:flex-row lg:items-center">
        <span class="block size-3 bg-white">{icon}</span>
        <span class="font-medium text-stone-100">
          <slot />
        </span>
      </div>
    </h2>
  )
}
